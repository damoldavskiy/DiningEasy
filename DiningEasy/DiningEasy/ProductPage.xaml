<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiningEasy.ProductPage">
    <ContentPage.Content>
        <StackLayout>
            <Image Aspect="AspectFill" Source="{Binding CurrentProduct.Path}"/>
            <Label Text="{Binding CurrentProduct.Name}"/>
            <Label Text="{Binding CurrentProduct.Description}"/>
            <Label Text="{Binding CurrentProduct.Ingridients}"/>
            <Label Text="{Binding CurrentProduct.Cost}"/>
            <Label Text="{Binding CurrentProduct.Weight}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>